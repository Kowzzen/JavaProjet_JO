<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.MedalTableController">
    <children>
        <TableView fx:id="medalTable" layoutX="14.0" layoutY="14.0" prefHeight="400.0" prefWidth="600.0">
            <columns>
                <TableColumn fx:id="countryColumn" prefWidth="150.0" text="Pays" />
                <TableColumn fx:id="goldColumn" prefWidth="100.0" text="Or" />
                <TableColumn fx:id="silverColumn" prefWidth="100.0" text="Argent" />
                <TableColumn fx:id="bronzeColumn" prefWidth="100.0" text="Bronze" />
                <TableColumn fx:id="pointsColumn" prefWidth="100.0" text="Points" />
            </columns>
        </TableView>
        <Button fx:id="reportButton" layoutX="14.0" layoutY="420.0" text="Générer Rapport" onAction="#handleGenerateReport"/>
    </children>
</AnchorPane>
